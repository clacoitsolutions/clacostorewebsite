@model OjasMart.Models.PropertyClass
@{
    ViewBag.Title = "Customer Report";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@using System.Data;

<script src="https://ajax.googleapis.com/ajax/libs/jquery/2.1.1/jquery.min.js"></script>
<script>
    $(document).ready(function () {
        $("#tblItemHead").DataTable();
    });
</script>
<div class="row">
    <div class="col-12">
        <div class="page-title-box">
            <div class="page-title-right">
            </div>
            <h4 class="page-title">Customer List</h4>
        </div>
    </div>
</div>

<div class="row">
    <div class="col-sm-12">
        <div class="card-box">
            <div class="table-responsive">
                <table id="tblItemHead" class="table table-centered mb-0">
                    <thead class="thead-light">
                        <tr>
                            <th>Sr.No</th>
                            <th>Customer Detail</th>
                            <th>Address</th>
                            <th>State Name</th>
                            <th>GSTIN No</th>
                            @*<th>PAN No</th>
                                <th>Approve Status</th>*@
                            <th>Register Date</th>
                            <th>Action</th>
                        </tr>
                    </thead>
                    <tbody>
                        @if (Model.dt != null && Model.dt.Rows.Count > 0)
                        {
                            int i = 0;
                            foreach (DataRow dr in Model.dt.Rows)
                            {
                                i++;
                                <tr>
                                    <td>@i</td>
                                    <td>
                                        <h5 class="m-0 font-weight-normal">@dr["Name"]</h5>
                                        <p class="mb-0 text-muted"><small>@dr["MobileNo"]</small></p>
                                        <p class="mb-0 text-muted"><small>@dr["EmailAddress"]</small></p>
                                    </td>
                                    <td>@dr["Address"]</td>
                                    <td>@dr["State_name"]</td>
                                    <td>@dr["GSTIN"]</td>
                                    @*<td>@dr["PanNo"]</td>
                                        <td>
                                            @if (dr["ApproveStatus"].ToString() == "Approved")
                                            {
                                                <span class="badge badge-success">@dr["ApproveStatus"]</span>
                                            }
                                            else
                                            {
                                                <span class="badge badge-warning">@dr["ApproveStatus"]</span>
                                            }
                                        </td>*@
                                    <td>@dr["RegDate"]</td>
                                    <td>
                                        <a href="../Home/CustomerProfile?CustCode=@dr["CustomerId"]" title="View Profile" class="action-icon"> <i class="mdi mdi-eye"></i></a>
                                    </td>
                                </tr>
                            }
                        }

                    </tbody>
                </table>
            </div>
        </div> <!-- end card-box-->
    </div> <!-- end col-->
</div>

