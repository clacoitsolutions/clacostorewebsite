@model OjasMart.Models.PropertyClass
@{
    Layout = null;
}
@using System.Data;


@if (Model.dtMenuTop != null && Model.dtMenuTop.Rows.Count > 0)
{
    <ul class="navbar-nav main_nav align-self-stretch">
        <li class="nav-item"><a href="../WebHome/index" class="nav-link active" title="Home">Home</a></li>
        @*<li class="nav-item"><a href="../WebHome/AboutUs" class="nav-link" title="AboutUs">AboutUs</a></li>*@
        @foreach (DataRow dr in Model.dtMenuTop.Rows)
        {
            if (Convert.ToInt32(dr["cnt"]) > 0)
            {
                <li class="nav-item">
                    <div class="ui icon top left dropdown nav__menu">
                        <a class="nav-link" href="../ProductDetail/SearchCategory?CatName=@dr["ProductCategory"]&&CatId=@dr["SrNo"]&&SubCatId=0" title="Pages">@dr["ProductCategory"] <i class="uil uil-angle-down"></i></a>
                        @Html.Action("BindMenuSub", "WebHome", new { PId = dr["SrNo"] })
                       
                    </div>
                </li>
            }
            else
            {
                <li class="nav-item"><a href="../ProductDetail/SearchCategory?CatName=@dr["ProductCategory"]&&CatId=@dr["SrNo"]" class="nav-link" title="@dr["ProductCategory"]">@dr["ProductCategory"]</a></li>
            }
        }
    
        @*<li class="nav-item"><a href="/WebHome/ContactUs" class="nav-link" title="Contact">Contact Us</a></li>*@
    </ul>
}
