            return;
        }
        if ($("#txtPhone").val() == "") {
            alert("Enter Phone/Mobile No !!!");
            $("#txtPhone").focus();
            return;
        }
        if ($("#ddlState").val() == "") {
            alert("Select State Name !!!");
            $("#ddlState").focus();
            return;
        }

        var dataobject = {
            SSName: $("#txtName").val(),
            ContactNo: $("#txtPhone").val(),
            Address: $("#txtAddress").val(),
            CityName: $("#txtCity").val(),
            StateId: $("#ddlState").val(),
            PinCode: $("#txtPinCode").val(),
            GstNo: $("#txtGstNO").val(),
            PanNo: $("#txtPanNo").val(),
            TINNo: $("#txtTinNo").val(),
            Description: $("#txtAbout").val()
