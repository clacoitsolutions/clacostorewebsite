    function BindItemsByGroup() {
        $("#ddlItemHead").empty();
        $.ajax({
            type: 'Post',
            url: '@Url.Action("GetItemsByGroup", "Sales")',
            dataType: 'json',
            data: { GroupCode: $("#ddlItemGroup").val() },
            success: function (data) {
                $.each(data, function (i, data) {
                    $("#ddlItemHead").append('<option value="'
                        + data.Value + '">' +
                        data.Text + '</option>');
                });
                $("#ddlItemHead").val('');
            },
            error: function (ex) {
                alert('Failed to retrieve Items : ' + ex);
            }
        });
    }

    function DiscountPercentCalculate() {
        if ($("#ddlDiscountType").val()=="Percent") {
            if (parseInt($("#txtDiscountValue").val()) > 100) {
                alert("Max Discount 100%");
                $("#txtDiscountValue").val("0");
