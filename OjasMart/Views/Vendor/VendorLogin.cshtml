                            $("#showSpinner").hide();
                        }
                    }
                });
            });
            function VerifyOTP() {
                debugger
                if ($('#txtOTP').val() != "") {
                    $.post('/CustomerAccount/MatchOTP/', { OTP: $('#txtOTP').val() }, function (data) {
                        if (data && data == "True") {
                            $('#myModal').modal('hide');
                            alert("OTP Verified");
                            $('#txtOTP').val('');
                            var dataobject = {
                                Email: $("#UserId").val(),
                                IsOtpVerified: true
                            };
                            $.ajax({
                                url: "/Vendor/ForgotPasswordDetails",
                                type: "POST",
                                contentType: false,
                                processData: false,
                                //data: dataobject,
                                data: JSON.stringify(dataobject),
                                contentType: "application/json; charset=utf-8",
                                dataType: "json",
                                success: function (r) {
                                    if (r[0] == '1') {
