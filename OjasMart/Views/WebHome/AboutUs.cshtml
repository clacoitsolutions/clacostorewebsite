
@{
    ViewBag.Title = "AboutUs";
    Layout = "~/Views/Shared/_FrontLayout.cshtml";
}


<style>
    .wrapper {
        padding-top: 132px;
        padding-bottom: 50px;
    }


    body {
        font-family: 'Poppins', sans-serif !important;
    }

    .title129 h2 {
        font-size: 24px;
        font-weight: 700;
        margin-top: 0px !important;
        color: #fff;
        text-align: center;
        line-height: 30px;
    }

    .life-gambo {
        padding: 59px 0;
        background: white;
    }
</style>
<style>
    .how-order-steps {
        border: 1px solid #d9d5d5;
        transition: all 0.5s ease; /* Adding transition for smooth effect */
    }

        .how-order-steps.hov {
            position: relative;
            z-index: 1; /* Ensure it stays above other elements when hovered */
        }

            .how-order-steps.hov:hover {
                top: -15px; /* Move the div up by 10px */
                border-width: 2px; /* Increase border width for visual effect */
            }


    .t {
        width: 80px; /* Adjust width and height as needed */
        height: 80px;
        background-color: #ed559f; /* Adjust background color as needed */
        position: relative;
        margin: 0 auto; /* Centers the diamond */
        clip-path: polygon(50% 0%, 100% 50%, 50% 100%, 0% 50%);
        display: inline-block;
        border-radius: 10% !important;
    }

    .hov:hover {
        background: #ef0058;
        color: white !important;
        border: 1px solid white;
    }

    .t i {
        position: absolute;
        top: 50%;
        left: 50%;
        transform: translate(-50%, -50%);
        color: white; /* Adjust icon color as needed */
        padding: 15px 0px;
        text-align: center;
        color: rgb(255, 255, 255);
        font-size: 30px;
        display: inline-block;
        border-radius: 20px;
    }
</style>

