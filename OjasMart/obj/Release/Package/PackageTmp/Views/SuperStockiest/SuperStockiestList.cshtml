@model OjasMart.Models.PropertyClass
@{
    ViewBag.Title = "Super Stockist List";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@using System.Data;

<script src="https://ajax.googleapis.com/ajax/libs/jquery/2.1.1/jquery.min.js"></script>
<script>
    $(document).ready(function () {
        $("#tblItemHead").DataTable();
    });
</script>
<div class="row">
    <div class="col-12">
        <div class="page-title-box">
            <div class="page-title-right">
                <a href="../SuperStockiest/CreateNewCompany" class="btn btn-danger waves-effect waves-light mb-2"><i class="mdi mdi-plus-circle mr-1"></i> Create New Store</a>
            </div>
            <h4 class="page-title">Store List</h4>
        </div>
    </div>
</div>

<div class="row">
    <div class="col-sm-12">
        <div class="card-box">
            <div class="table-responsive">
                <table id="tblItemHead" class="table table-centered mb-0">
                    <thead class="thead-light">
                        <tr>
                            <th>Sr.No</th>
                            <th>Store Detail</th>
                            <th>Address</th>
                            <th>User Name</th>
                            <th>Password</th>
                            <th>Status</th>
                            <th>Register Date</th>
                            <th>Action</th>
                        </tr>
                    </thead>
                    <tbody>
                        @if (Model.dt != null && Model.dt.Rows.Count > 0)
                        {
                            int i = 0;
                            foreach (DataRow dr in Model.dt.Rows)
                            {
                                i++;
                                <tr>
                                    <td>@i</td>
                                    <td nowrap>
                                        <h5 class="m-0 font-weight-normal">@dr["SSName"]</h5>
                                        <p class="mb-0 text-muted"><small>@dr["ContactNo"]</small></p>
                                        <p class="mb-0 text-muted"><small>@dr["emailAddress"]</small></p>
                                    </td>                                    
                                    <td>@dr["addr"]</td>                                    
                                    <td> <span class="badge bg-soft-success text-success">@dr["UserName"]</span></td>
                                    <td> <span class="badge bg-soft-warning text-warning">@dr["Password"]</span>  </td>
                                    <td>
                                    @if(dr["Status"].ToString()=="Active")
                                    {
                                        <span class="badge badge-success">@dr["Status"]</span>
                                    }
                                    else
                                    {
                                        <span class="badge badge-danger">@dr["Status"]</span>
                                    }
                                   </td>
                                    <td nowrap>@dr["RegDate"]</td>
                                    <td>
                                        <a href="../SuperStockiest/MyProfile?MType=SS&&MCode=@dr["SSCode"]" title="View Profile" class="action-icon"> <i class="mdi mdi-eye"></i></a>
                                        <a href="../SuperStockiest/CreateNewCompany?SSCode=@dr["SSCode"]" class="action-icon"> <i class="mdi mdi-square-edit-outline"></i></a>                                        
                                    </td>
                                </tr>
                            }
                        }

                    </tbody>
                </table>
            </div>
        </div> <!-- end card-box-->
    </div> <!-- end col-->
</div>