@model OjasMart.Models.ClsMemberShip
@{
    ViewBag.Title = "MembercardDtls";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<my-spinner>
    <div ng-show="showSpinner" class="nexo-overlay ng-hide" style="width: 100%; height: 100%; background: rgba(255, 255, 255, 0.9); z-index: 5000; position: absolute; top: 0px; left: 0px;display:none" id="showSpinner">
        <i class="fa fa-refresh fa-spin nexo-refresh-icon" style="color: rgb(0, 0, 0); font-size: 50px; position: absolute; top: 50%; left: 50%; margin-top: -25px; margin-left: -25px; width: 44px; height: 50px;">
        </i>
    </div>
</my-spinner>

<div class="row pt-2 pb-2">
    <div class="col-sm-12">
        <h4 class="page-title">Member Ship Details</h4>
    </div>
</div>
<section id="leaddata">
    <div class="row">
        <div class="col-lg-12">
            <div class="card">
                <div class="card-header text-uppercase">Member Ship Details</div>
                <div class="card-body">
                   
              
                </div>
            </div>
        </div>
    </div>

    <div class="row" id="bindme">
        <div class="col-lg-12">
            <div class="card">
                <div class="card-body">
                    <div class="table-responsive" id="divDetails">
                        <table id="example" class="table table-borderless">
                            <thead>
                                <tr>
                                    <th>Card Id</th>
                                    <th>Customer Name</th>
                                    <th>Mobile No</th>
                                    <th>Member Ship Type</th>
                                    <th>Card Valid From</th>
                                    <th>Card Valid To</th>
                                    <th>Print</th>
                       
                                </tr>
                            </thead>
                            <tbody>
                                @if (Model.dtmemberShipReport != null && Model.dtmemberShipReport.Rows.Count > 0)
                                {
                                    foreach (System.Data.DataRow item in Model.dtmemberShipReport.Rows)
                                    {

                                        <tr>
                                          
                                            <td class="cent">@item["membercardId"]</td>
                                            <td class="cent">@item["Name"]</td>
                                            <td class="cent">@item["ContactNo"]</td>
                                            <td class="cent">@item["MemberShipTitle"]</td>
                                            <td class="cent">@item["CardValidFrom"]</td>
                                            <td class="cent">@item["cardValidTo"]</td>
                                            <td class="cent"><a href="/Report/PrintmemberCard?MemberId=@item["membercardId"]">  Print</a></td>
                                        </tr>
                                    }
                                }
                            </tbody>

                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

