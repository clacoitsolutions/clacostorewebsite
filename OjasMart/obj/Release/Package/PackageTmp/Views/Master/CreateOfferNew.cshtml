    function ApplyMRP() {

        var MRPFrom = parseFloat($("#txtMRPFrom").val());
        var MRPTo = parseFloat($("#txtMRPTo").val());

        if (MRPFrom > MRPTo)
        {
            alert("Apply MRP From can not be greater than apply MRP To!!");
            $("#txtMRPTo").val("");
            $("#txtMRPFrom").val("");
            $("#txtMRPFrom").focus()
        }
        
