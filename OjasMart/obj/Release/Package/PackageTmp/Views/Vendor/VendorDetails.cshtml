@model List<OjasMart.Models.VendorDetails>
@{
    ViewBag.Title = "VendorDetails";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<link rel="stylesheet" type="text/css" href="https://code.jquery.com/ui/1.12.1/themes/base/jquery-ui.css">
