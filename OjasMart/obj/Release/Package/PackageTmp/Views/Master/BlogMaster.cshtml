@model OjasMart.Models.PropertyClass
@{
    ViewBag.Title = "Blog Master";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@using System.Data;

<script src="https://ajax.googleapis.com/ajax/libs/jquery/2.1.1/jquery.min.js"></script>
<script type="text/javascript">
    $(document).ready(function () {
        $('select').select2();
        $('#txtStartDate').datepicker({
            format: 'dd-MM-yyyy'
        });
        $('#txtEndDate').datepicker({
            format: 'dd-MM-yyyy'
        });

        $("#tblItemHead").DataTable();

        $('input[type=radio][name=radioInline0]').change(function () {
            var value1 = this.value;
            if (value1 == 'Purchase') {
                $("#divItem").hide();
                $("#divOnPurchase").show();
                $("#ddlItemGroup").val('0');
                BindItemsByGroup();
            }
            else if (value1 == 'Item') {
                $("#divItem").show();
                $("#divOnPurchase").hide();
            }
        });
        $('#chkFree').change(function () {
            if ($(this).is(":checked")) {
                $("#divFreeItem").show();
            }
            else {
                $("#divFreeItem").hide();
            }
        });


        $("#fuMainFile").change(function () {
            var file = this.files[0];
            var fileType = file["type"];
            var validImageTypes = ["image/gif", "image/jpeg", "image/png", "image/webp"];
            if ($.inArray(fileType, validImageTypes) < 0) {
                alert('Please Upload only image file!');
                $("#fuMainFile").val('');
                $('#imgMainImage').attr('src', '../img/noimageicon.png');
                return;
            }
            else {
                readURL(this);
            }
        });
    });


    function readURL(input) {
        if (input.files && input.files[0]) {
            var reader = new FileReader();
            reader.onload = function (e) {
                $('#imgMainImage').attr('src', e.target.result);
            }
            reader.readAsDataURL(input.files[0]);
        }
        else {
            $('#imgMainImage').attr('src', '../img/noimageicon.png');
            reader.readAsDataURL(input.files[0]);
        }
    }


    function InsertBlog() {
        debugger;
      /*  var type = $('input:radio[name=radioInline0]:checked').val();*/
        if ($("#txtTitle").val() == "") {
            alert("Please Enter Title !!!");
            $("#txtTitle").focus();
            return;
        }
        if ($("#txtDescription").val() == "") {
            alert("Please Enter Description  !!!");
            $("#txtDescription").focus();
            return;
        }
        if ($("#fuMainFile").val() == "") {
            alert("Please Upload Blog Image !");
            $("#fuMainFile").focus();
            return;
        }

        var Imagefile = $("#fuMainFile").get(0).files;
        var data = new FormData;
        data.append("MainImage", Imagefile[0]);
        data.append("Title", $("#txtTitle").val());
        data.append("Description", $("#txtDescription").val());
        data.append("Action", '1');


        $("#showSpinner").show();
        $.ajax({
            url: "/Master/InsertBlogDetails",
            type: "POST",
            contentType: false,
            processData: false,
            data: data,
            success: function (r) {
                if (r.strId == '1') {
                    alert(r.msg);
                    location.reload();
                }
                else if (r.strId == '2') {
                    alert(r.msg);
                    $("#showSpinner").hide();
                }
                else {
                    alert('Server not Responding !!!');
                    $("#showSpinner").hide();
                }
            },
            error: function (XMLHttpRequest, textStatus, errorThrown) {
                alert('Please Check values Entered by you !!!');
                $("#showSpinner").hide();
            }
        });
    }


