        data.append("OnPurchaseAmount", $("#txtPurchaseAmt").val() != "" ? parseFloat($("#txtPurchaseAmt").val()) : 0);
        data.append("CashBackAmount", $("#txtCashBack").val() != "" ? parseFloat($("#txtCashBack").val()) : 0);
