    function GetDetailsForEdit(ItemCode) {
        var dataobject = {
            OfferId: ItemCode
        };
        $.ajax({
            type: "POST",
            url: "/Master/GetOfferDetailsForEdit",
            data: dataobject,
            dataType: "json",
            success: function (r) {
                if (r != null) {
                    debugger;
                    $("#hdOfferCode").val(r.RespoCode);
                    $("#txtOfferName").val(r.OfferTitle);
                    $("#txtPurchaseAmt").val(r.OnPurchaseAmount);
                    $('#txtCashBack').val(r.CashBackAmount);
                    $('#txtPoints').val(r.Points);
                    $('#txtPointAmount').val(r.AmountPerPoint);
                    $('#txtStartDate').val(r.mDate);
                    $('#txtEndDate').val(r.eDate);

                    $('#ddlOfferType').val(r.AccountType).trigger('change');
                    $('#ddlDiscountType').val(r.CardType).trigger('change');
                    $('#txtDiscountValue').val(r.DiscPer);

                    $('#txtMRPFrom').val(r.ApplyMRPFrom);
                    $('#txtMRPTo').val(r.ApplyMRPTo);

                    if (r.Status == "1") {
                        $("#OnlyForFirstPurchase").attr("checked", "checked");
                    }
                    if (r.OfferType == "Brand") {
                        $("#inlineRadio1").attr("checked", "checked");
                        $('#ddlBrand').val(r.ItemCode).trigger('change');

                        $("#divItem").hide();
                        $("#divCategory").hide();
                        $("#divPromo").hide();
                        $("#divBrand").show();

                    }
                    else if (r.OfferType == "Category") {
                        $("#inlineRadio2").attr("checked", "checked");
                        $('#ddlCategory').val(r.ItemCode).trigger('change');

                        $("#divItem").hide();
                        $("#divCategory").show();
                        $("#divPromo").hide();
                        $("#divBrand").hide();

                    }
                    else if (r.OfferType == "Product") {
                        $("#inlineRadio3").attr("checked", "checked");
                        $('#ddlItemHead').val(r.ItemCode).trigger('change');

                        $("#divItem").show();
                        $("#divCategory").hide();
                        $("#divPromo").hide();
                        $("#divBrand").hide();
                    }
                    else if (r.OfferType == "Promo") {
                        $("#inlineRadio4").attr("checked", "checked");
                        $('#txtPromoCode').val(r.ItemBarCode);

                        $("#divItem").hide();
                        $("#divCategory").hide();
                        $("#divPromo").show();
                        $("#divBrand").hide();
                    }

                    if (r.PurchaseFile != "") {
                        $("#imgMainImage").attr("src", r.PurchaseFile);
                    }

                    $("#txtOfferName").focus();

                    $("#btnSave").hide();
                    $("#btnUpdate").show();
               //     $("#btnCancel").show();

                }
                else {
                    alert("Item Details Not Found !!!");
                }
            }
        });
    }
