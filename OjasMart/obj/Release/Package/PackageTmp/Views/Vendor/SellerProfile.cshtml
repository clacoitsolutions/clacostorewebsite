@model OjasMart.Models.VMVendorSignup
@{
    ViewBag.Title = "SellerProfile";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container">
    <div class="page-header">
        <div class="page-header-title">
            <h4>Seller Profile</h4>
            @*<span>Lorem ipsum dolor sit amet, consectetur adipisicing elit</span>*@
        </div>
        @*<div class="page-header-breadcrumb">
            <ul class="breadcrumb-title">
                <li class="breadcrumb-item">
                    <a href="index-2.html">
                        <i class="icofont icofont-home"></i>
                    </a>
                </li>
                <li class="breadcrumb-item">
                    <a href="#!">Vendor Dashboard</a>
                </li>
                <li class="breadcrumb-item">
                    <a href="#!">My  Profile</a>
                </li>
            </ul>
        </div>*@
    </div>
    <div class="page-body">
        <div class="row">
            <div class="col-lg-12">
                <div class="card">
                    <div class="card-header">
                        <h5>Profile Information</h5>
                        <div class="card-header-right">
                            <i class="icofont icofont-rounded-down"></i>
                            <i class="icofont icofont-refresh"></i>
                            <i class="icofont icofont-close-circled"></i>
                        </div>
                    </div>
                    <div class="card-block tab-icon">
                        <div class="row">
                            <div class="col-lg-12 col-xl-12">
                                @if (TempData["msg"] != null)
                                {
                                    if (TempData["flag"].ToString() == "1")
                                    {
                                        <div class="alert alert-primary icons-alert">
                                            <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                                                <i class="icofont icofont-close-line-circled"></i>
                                            </button>
                                            <p><strong>Success!</strong> @TempData["msg"]</p>
                                        </div>
                                    }
                                    else
                                    {
                                        <div class="alert alert-danger icons-alert">
                                            <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                                                <i class="icofont icofont-close-line-circled"></i>
                                            </button>
                                            <p><strong>Error!</strong> @TempData["msg"]</p>
                                        </div>
                                    }
                                }
                                <ul class="nav nav-tabs md-tabs " role="tablist">
                                    <li class="nav-item">
                                        <a class="nav-link active" data-toggle="tab" href="#home7" role="tab"><i class="icofont icofont-building-alt"></i>Personal Information</a>
                                        <div class="slide"></div>
                                    </li>
                                    <li class="nav-item">
                                        <a class="nav-link" data-toggle="tab" href="#profile7" role="tab"><i class="icofont icofont-bank"></i>Change Password</a>
                                        <div class="slide"></div>
                                    </li>

                                </ul>
                                <div class="tab-content card-block">
                                    <div class="tab-pane active" id="home7" role="tabpanel">
                                        @using (Html.BeginForm("SellerProfile", "Vendor", FormMethod.Post, new { enctype = "multipart/form-data" }))
                                        {
                                            //  for(var q = 0; i < Model.storeList.Count(); q++) {
                                            //  foreach (var item in Model.storeList)
                                            //{
                                            <div class="j-wrapper j-wrapper-640">
                                                <div class="j-pro">
                                                    <div class="j-content">
                                                        <div class="j-unit">
                                                            <label class="j-label">Full Name</label>
                                                            <div class="j-input">
                                                                <label class="j-icon-right" for="name">
                                                                    <i class="icofont icofont-building-alt"></i>
                                                                </label>
                                                                @*<input type="text" id="name" name="name">*@

                                                                @Html.TextBoxFor(m => m.Name, new { @class = "form-control", @placeholder = "Enter Name" })
                                                                @Html.ValidationMessageFor(m => m.Name, "", new { @class = "text-danger" })

                                                            </div>
                                                        </div>



                                                        <div class="j-unit">
                                                            <label class="j-label">Mobile No.</label>
                                                            <div class="j-input">
                                                                <label class="j-icon-right" for="GST No">
                                                                    <i class="icofont icofont-building-alt"></i>
                                                                </label>
                                                                @*<input type="text" id="name" name="name">*@
                                                                @Html.TextBoxFor(m => m.ContactNo, new { @class = "form-control", @placeholder = "Mobile No." })
                                                                @Html.ValidationMessageFor(m => m.ContactNo, "", new { @class = "text-danger" })

                                                            </div>
                                                        </div>
                                                        <div class="j-unit">
                                                            <label class="j-label">Email No.</label>
                                                            <div class="j-input">
                                                                <label class="j-icon-right" for="Adhar No">
                                                                    <i class="icofont icofont-building-alt"></i>
                                                                </label>
                                                                @*<input type="text" id="name" name="name">*@

                                                                @Html.TextBoxFor(m => m.EmailId, new { @class = "form-control", @placeholder = "Email", @disabled = "true" })

                                                            </div>
                                                        </div>






                                                        <div class="j-divider j-gap-bottom-25"></div>


                                                        <div class="j-unit">
                                                            <label class="j-label">City</label>
                                                            <div class="j-input">
                                                                @Html.DropDownListFor(m => m.vendorCity, (IEnumerable<SelectListItem>)ViewBag.BindCity, "- select city -", new { @class = "form-control" })
                                                                @Html.ValidationMessageFor(m => m.vendorCity, "", new { @class = "text-danger" })




                                                            </div>
                                                        </div>




                                                        <div class="j-response"></div>
                                                    </div>
                                                    <div class="j-footer">
                                                        <button type="submit" id="btnSaveStoreInfo" class="btn btn-primary">Save Information</button>
                                                    </div>
                                                </div>
                                            </div>
                                        }
                                    </div>
                                    <div class="tab-pane" id="profile7" role="tabpanel">
    @using (Html.BeginForm("ChangePassword", "Vendor", FormMethod.Post))
    {<div class="row">
                                            <div class="col-12">
                                               
                                                   
                                                        <div class="form-row">

                                                            
                                                                    <div class="j-unit">
                                                                        <label class="j-label">Old Password</label>
                                                                        <div class="j-input">
                                                                            <label class="j-icon-right" for="name">
                                                                                <i class="icofont icofont-building-alt"></i>
                                                                            </label>
                                                                            @*<input type="text" id="name" name="name">*@
                                                                            @Html.TextBoxFor(m => m.OTP, new { @class = "form-control", @placeholder = "Old Password", @type = "password" })
                                                                            @Html.ValidationMessageFor(m => m.OTP, "", new { @class = "text-danger" })
                                                                        </div>
                                                                    </div>
                                                                    <div class="j-unit">
                                                                        <label class="j-label">New Password</label>
                                                                        <div class="j-input">
                                                                            <label class="j-icon-right" for="name">
                                                                                <i class="icofont icofont-building-alt"></i>
                                                                            </label>
                                                                            @*<input type="text" id="name" name="name">*@
                                                                            @Html.TextBoxFor(m => m.Password, new { @class = "form-control", @placeholder = "New password", @type = "password" })

                                                                        </div>
                                                                    </div>
                                                                    <div class="j-unit">
                                                                        <label class="j-label">Confirm Password</label>
                                                                        <div class="j-input">
                                                                            <label class="j-icon-right" for="name">
                                                                                <i class="icofont icofont-building-alt"></i>
                                                                            </label>
                                                                            @*<input type="text" id="name" name="name">*@
                                                                            @Html.TextBoxFor(m => m.ConformPassword, new { @class = "form-control", @placeholder = "Confirm Password", @type = "password" })
                                                                            @Html.ValidationMessageFor(m => m.ConformPassword, "", new { @class = "text-danger" })

                                                                        </div>
                                                                    </div>

                                                                    <div class="j-response"></div>
                                                                </div>
                                                                <div class="form-group col-md-4" style="margin-top:3%;">
                                                                    <button type="button" onclick="changepass()" id="btnSaveBankInfo" class="btn btn-primary">Save Information</button>
                                                                </div>
                                                            </div>
                                                        </div>
                                                        }
                                                    </div>

                                                </div>
                                            </div>
                                        </div>
                                </div>
                </div>
            </div>
        </div>
    </div>

</div>

<script>
    function changepass() {
        if ($("#OTP").val() == "") {
            alert('Enter Old Password!');
            $("#OTP").focus();
            return false;
        }
        if ($("#Password").val() == "") {
            alert('Enter New Password!');
            $("#Password").focus();
            return false;
        }

        if ($("#ConformPassword").val() == "") {
            alert('Enter Conform Password!');
            $("#ConformPassword").focus();
            return false;
        }
        if ($("#Password").val() == $("#ConformPassword").val()) {
            $("#btnSaveBankInfo").attr("type", "submit");
        }
        else {
            alert("Password Not Matched");
        }


    }
</script>