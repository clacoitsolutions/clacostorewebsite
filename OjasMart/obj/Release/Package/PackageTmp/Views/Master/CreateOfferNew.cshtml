                $("#divBrand").hide();
            }
            else {
                $("#divItem").hide();
                $("#divCategory").show();
                $("#divPromo").hide();
                $("#divBrand").hide();
            }
        });
        $('#chkFree').change(function () {
            if ($(this).is(":checked")) {
                $("#divFreeItem").show();
            }
            else {
                $("#divFreeItem").hide();
            }
        });

        $('#ddlOfferType').change(function () {
            if ($('#ddlOfferType').val() == "Discount") {
