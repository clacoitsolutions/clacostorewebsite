<div class="row">
    <div class="col-sm-12">
        <div class="card-box">
            <h4 class="header-title">Offer Details</h4>
            <div class="table-responsive">
                <table id="tblItemHead" class="table table-borderless table-hover table-centered m-0">
                    <thead class="thead-light">
                        <tr>
                            <th>Sr.No</th>
                            <th>Offer Name</th>
                            <th>Offer Detail</th>
                            <th>Added Date</th>
                            <th>Action</th>
                        </tr>
                    </thead>
                    <tbody>
                        @if (Model.dt != null && Model.dt.Rows.Count > 0)
                        {
                            int i = 0;
                            foreach (DataRow dr in Model.dt.Rows)
                            {
                                i++;
                                <tr>
                                    <td>@i</td>
                                    <td>
                                        <h5 class="m-0 font-weight-normal">@dr["OfferTitle"]</h5>
                                        <p class="mb-0 text-muted"><small>@dr["OfferCode"]</small></p>
                                        <p class="mb-0 text-muted">
                                            <small>
                                                @if (dr["OfferType"].ToString() == "Brand")
                                                {
                                                    <span class="badge badge-success">@dr["OfferType"]</span>
                                                }
                                                else if (dr["OfferType"].ToString() == "Category")
                                                {
                                                    <span class="badge badge-info">@dr["OfferType"]</span>
                                                }
                                                else if (dr["OfferType"].ToString() == "Promo")
                                                {
                                                    <span class="badge badge-primary">@dr["OfferType"]</span>
                                                }
                                                else
                                                {
                                                    <span class="badge badge-warning">@dr["OfferType"]</span>
                                                }
                                                <span> - @dr["ItemName"]</span>
                                            </small>
                                        </p>
                                    </td>
                                    <td>
                                        @dr["Detail"] <br />
                                    <p class="text-muted">
                                        <span>Valid From: @dr["StartDate"]</span> <span>Till: @dr["EndDate"]</span>
                                    </p>
                                    @if (dr["ActStatus"].ToString() == "Active")
                                    {
                                        <span class="badge badge-success">@dr["ActStatus"]</span>
                                    }
                                    else if (dr["ActStatus"].ToString() == "DeActive")
                                    {
                                        <span class="badge badge-danger">@dr["ActStatus"]</span>
                                    }
                                    else
                                    {
                                        <span class="badge badge-info">@dr["ActStatus"]</span>
                                    }
                                </td>
                                <td>@dr["AddedDate"]</td>
                                <td>
                                    <a href="javascript:void(0);" title="Edit" class="action-icon" onclick="GetDetailsForEdit('@dr["OfferCode"]')"> <i class="mdi mdi-square-edit-outline" style="color:#51bfd0"></i></a>
                                    <a href="javascript:void(0);" title="Delete" class="action-icon" onclick="DeleteItemHeadDetails('@dr["OfferCode"]')"> <i class="mdi mdi-delete" style="color:red"></i></a>
                                </td>
                            </tr>
                            }
                        }

                    </tbody>
                </table>
            </div>
        </div> <!-- end card-box-->
    </div> <!-- end col-->
</div>
