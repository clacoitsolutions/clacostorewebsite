<script>
    function ProceedOrderCancel(OrderId) {
        if (OrderId != '') {
            /*  $('#exampleModal').modal('show');*/
            $('#spnOrderId').text(OrderId);
        }
    }

    function CancelYourOrder() {
        if ($('#spnOrderId').text() == '') {
            alert('Order Id not found!');
            return;
        }
        if ($('#txtCancelReason').val() == '') {
            alert('Please Enter Reason!');
            $('#txtCancelReason').focus();
            return;
        }
        var x = confirm("Are you sure you want to cancel?");
        if (x) {
            var dataobject = {
                OrderId: $('#spnOrderId').text(),
                Reason: $('#txtCancelReason').val(),
            };
            $("#showSpinner").show();
            $.ajax({
                type: "POST",
                url: "/CustomerAccount/CancelOrder",
                data: dataobject,
                dataType: "json",
                success: function (r) {
                    if (r.strId == "1") {
                        alert(r.msg);
                        //getDetails();
                        $("#showSpinner").hide();
                        location.reload();
                    }
                    else {
                        alert(r.msg);
                        $("#showSpinner").hide();
                    }
                }
            });
        }
        else {
            return false;
        }
    }
    function ProceedOrderReturn(OrderId) {
        debugger
        if (OrderId != '') {
            //$('#address_model').modal('show');
            $('#spnOrderId').text(OrderId);
        }
    }
    function ReturnYourOrder() {
        if ($('#spnOrderId').text() == '') {
            alert('Order Id not found!');
            return;
        }
        if ($('#txtReturnReason').val() == '') {
            alert('Please Enter Reason!');
            $('#txtReturnReason').focus();
            return;
        }
        var x = confirm("Are you sure you want to Return?");
        if (x) {
            var dataobject = {
                OrderId: $('#spnOrderId').text(),
                Reason: $('#txtReturnReason').val(),
            };
            $("#showSpinner").show();
            $.ajax({
                type: "POST",
                url: "/CustomerAccount/ReturnOrder",
                data: dataobject,
                dataType: "json",
                success: function (r) {
                    if (r.strId == "1") {
                        alert(r.msg);
                        //getDetails();
                        $("#showSpinner").hide();
                        location.reload();
                    }
                    else {
                        alert(r.msg);
                        $("#showSpinner").hide();
                    }
                }
            });
        }
        else {
            return false;
        }
    }
    function getDetails() {
        $.ajax({
            url: "../CustomerAccount/MyOrders",
            type: "POST",
            data: {},
            datatype: "json",
            success: function (data1) {
                var htmlNew = data1;
